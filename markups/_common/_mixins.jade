mixin nav(className, items, activeIndx)    nav(class= className)        .container_nav            ul(class= className + "__list")                each item, indx in items                    li(class=className + "__item "+ ((activeIndx == indx) ? className + '__item' + '_active' : ''))                        a(href="#" class= className + "__link")=itemmixin list(className, items, activeIndx)    ul(class= className + "__list")        each item, indx in items            li(class=className + "__item " + ((activeIndx == indx) ? className + '__item' + '_active' : ''))                a(href="#" class= className + "__link")=itemmixin list-class(className, items, activeIndx)    ul(class= className + "__list")        each item, indx in items            li(class=className + "__item " + ((activeIndx == indx) ? className + '__item' + '_active' : '')+ className + "__item_"+item)                a(href="#" class= className + "__link")=item- var i=1;mixin check-brend(className, items)    ul(class= className + "__list")        each item in items            li(class=className + "__item ")                input(type="checkbox" name='brand' id=item+"_"+i).brand__checkbox                label(for=item+"_"+i class ="brand__text") #{item}                - i++;- var i=1;mixin check-os(className, items)    ul(class= className + "__list")        each item in items            li(class=className + "__item ")                input(type="checkbox" name='os' id=item+"_"+i).os__checkbox                label(for=item+"_"+i class ="os__text") #{item}                - i++;